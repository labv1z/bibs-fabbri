}

@TECHREPORT{AIC-TN-1992:521,
AUTHOR="Peter D. Karp, John D. Lowrance, Thomas M and Wilkins, David E.",
TITLE="The Grasper-Cl Graph Management System",
TYPE="Technical Note",
INSTITUTION="AI Center, SRI International",
